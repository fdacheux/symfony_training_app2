{% extends 'base.html.twig' %}

{% block title %}{{family.fieldName|capitalize}}{% endblock %}
{% block myTitle %}{{family.fieldName|capitalize}} description{% endblock %}
{% block body %}

        <div class=" mx-3">Description : {{ family.description }}</div>
        <div class="row mt-4 mx-3 items-center align-items-center">
            {% for animal in family.animals %}
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <div class="row align-items-center">
                        <div class="col-2 text-center"> 
                            <img class="img-fluid" src="{{asset('images/' ~ animal.image)}}" alt=""/>
                        </div>
                        <div class="col text-center">
                            <h2><a href="{{path('display_animal', {'id': animal.id})}}">{{ animal.name }}</a></h2>
                            <div>{{ animal.description }}</div>
                            <div class="mt-3">
                                {% for continent in animal.continents %}
                                    <a class="btn btn-warning" href="{{path('display_continent', {'id': continent.id})}}">{{ continent.fieldName }}</a>
                                    {# <a class="btn btn-warning">{{ continent.fieldName }}</a> #}
                                {% endfor %}  
                            </div>        
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
{% endblock %}
